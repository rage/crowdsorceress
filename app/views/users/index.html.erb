<p id="notice"><%= notice %></p>

<h1>Users</h1>

<strong> There are <%= @users_count %> users</strong>

<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th class="admin-column">Administrator</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.first_name ? user.first_name : '-' %> <%= user.last_name%></td>
        <td><%= user.email%></td>
        <td class="admin-column"><%= user.administrator ? "\u2713": "" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

<%= page_entries_info @users %>
