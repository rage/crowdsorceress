<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-hover">
  <thead class="thead-inverse">
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Administrator</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.first_name ? user.first_name : '-' %> <%= user.last_name%></td>
        <td><%= user.email%></td>
        <td><%= user.administrator %></td>
      </tr>
    <% end %>
  </tbody>
</table>
