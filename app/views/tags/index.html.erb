<p id="notice"><%= notice %></p>

<h1>Tags</h1>

<table class="table table-hover ">
  <thead class="thead-inverse" >
    <tr>
      <th>Name</th>
      <th>Recommended</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= link_to tag.name, tag %></td>
        <td><%= tag.recommended %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path, class: "btn btn-primary" %>
