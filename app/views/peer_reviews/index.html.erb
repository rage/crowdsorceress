<p id="notice"><%= notice %></p>

<h1>Peer Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Exercise</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @peer_reviews.each do |peer_review| %>
      <tr>
        <td><%= peer_review.user_id %></td>
        <td><%= peer_review.exercise_id %></td>
        <td><%= peer_review.comment %></td>
        <td><%= link_to 'Show', peer_review %></td>
        <td><%= link_to 'Edit', edit_peer_review_path(peer_review) %></td>
        <td><%= link_to 'Destroy', peer_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Peer Review', new_peer_review_path %>
